@model IEnumerable<ButtonGrid.Models.ButtonModel>

<style>
    .game-button{
        width :75px;
        text-align:center;
        
    }
    .button-zone{
        display: flex;
        flex-wrap: wrap;
    }
    .line-break{
        flex-basis:100%;
        height: 0
    }
    .button-label{
        font-size: 8px;
        text-align:center
    }
    .game-button-image{
        width:70%
    }
</style>

@{     
    string[] imagenames = { "BlueB.png", "GreenB.png", "RedB.png", "GreyB.png" };
  
}
<p>Current Time: @DateTime.Now</p>
<form>

    <div class="button-zone">
        
        @for (int i = 0; i < Model.Count(); i++)
        {
            // this statement start a new line after every five elements
            if (i % 5 == 0)
            {
                <div class="line-break"></div>
            }

    <div class="oneButton" id="@i">
        <button class="game-button" name="buttonNumber" value="@Model.ElementAt(i).Id" type="submit" asp-controller="button" asp-action="HandleButtonClick">
            <img class="game-button-image" src="/img/@imagenames[Model.ElementAt(i).ButtonState]" />
            <div class="button-label">
                @Model.ElementAt(i).Id
                , 
                @Model.ElementAt(i).ButtonState
            </div>
        </button>
    </div>
            
        }

    </div>

</form>

<div id="messageArea">
    <p>Not all the buttons are the same colour. See if you can make them all match.</p>
</div>

